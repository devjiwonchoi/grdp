{
  "name": "grdp",
  "version": "1.0.0",
  "description": "Retrieve the root directory path of the project, regardless of monorepo.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/devjiwonchoi/grdp",
  "author": "Jiwon Choi",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "bunchee",
    "test": "jest"
  },
  "exports": {
    ".": {
      "module": "./dist/index.esm.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
    "duplicheck": "^0.0.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "bunchee": "^3.5.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">= 16"
  },
  "packageManager": "pnpm@8.5.1",
  "keywords": [
    "get",
    "root",
    "directory",
    "path"
  ]
}